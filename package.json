{
  "name": "@devmehq/react-qr-code",
  "version": "1.0.6",
  "private": false,
  "description": "React component to generate QR codes",
  "keywords": [
    "react",
    "react-component",
    "qrcode",
    "qr",
    "code",
    "generator"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/devme/react-qr-code"
  },
  "license": "MIT",
  "author": "Mohamed Meabed <mo.meabed@gmail.com>",
  "sideEffects": false,
  "main": "./bundles/index.umd.js",
  "module": "./esm5/index.js",
  "typings": "./types/index.d.ts",
  "scripts": {
    "prebuild": "npm run cleanup && npm run verify",
    "build": "tsc && tsc --target es2018 --outDir dist/esm2015 && rollup -c config/rollup.config.js && rollup -c config/rollup.config.js --environment NODE_ENV:production",
    "postbuild": "node scripts/copy && npm run size",
    "cleanup": "shx rm -rf dist",
    "commit": "git-cz",
    "docs": "typedoc -p . --theme minimal --target 'es6' --excludeNotExported --excludePrivate --ignoreCompilerErrors --exclude \"**/src/**/__tests__/*.*\" --out docs src/",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,css,scss,sass,less,md}\"",
    "format:fix": "npm run format -- --write",
    "lint": "eslint",
    "lint:fix": "npm run lint -- --fix",
    "old-verify": "npm run validate-js && npm run style && npm run test:ci",
    "prerelease": "npm run build",
    "release": "standard-version",
    "postrelease": "node scripts/copy && node scripts/build && npm run release:github && npm run release:npm",
    "release:github": "git push --no-verify --follow-tags origin master",
    "release:npm": "npm publish",
    "release:preflight": "npm pack ./dist --dry-run",
    "size": "node scripts/file-size ./dist/bundles/index.umd.min.js ./dist/bundles/index.esm.min.js",
    "style": "npm run format -- --list-different && npm run lint",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "test": "jest -c ./config/jest.config.js",
    "test:ci": "npm t -- --ci",
    "test:coverage": "npm t -- --coverage",
    "test:watch": "npm t -- --watch",
    "validate-js": "tsc -p ./config && tsc -p ./scripts",
    "verify": "npm run validate-js"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css,scss,sass,less,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@types/eslint": "8.4.8",
    "@types/jest": "29.2.0",
    "@types/json5": "2.2.0",
    "@types/lodash.isplainobject": "4.0.7",
    "@types/node": "18.11.7",
    "@types/prettier": "2.7.1",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@types/rollup-plugin-json": "3.0.3",
    "@types/rollup-plugin-sourcemaps": "0.5.0",
    "@types/shelljs": "0.8.11",
    "@types/standard-version": "7.0.1",
    "@types/webpack-config-utils": "2.3.1",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "brotli-size": "4.0.0",
    "commitizen": "4.2.5",
    "cross-var": "1.1.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.26.0",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.1",
    "jest": "29.2.2",
    "jest-watch-typeahead": "2.2.0",
    "json5": "2.2.1",
    "kleur": "4.1.5",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup": "3.2.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-uglify": "6.0.4",
    "shelljs": "0.8.5",
    "shx": "0.3.4",
    "standard-version": "9.5.0",
    "ts-jest": "29.0.3",
    "tslib": "2.4.0",
    "typedoc": "0.23.18",
    "typescript": "4.8.4",
    "webpack-config-utils": "2.3.1"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  },
  "engines": {
    "node": ">=8.5",
    "npm": ">=6.0",
    "yarn": "^1.0"
  },
  "es2015": "./esm2015/index.js"
}
